	docker compose exec redis redis-cli

shell-svc: ## Shell ÑĞµÑ€Ğ²Ğ¸ÑĞ°: make shell-svc SVC=company-service
	docker compose exec $(SVC) bash

# â”€â”€â”€ Ğ”Ğ°Ğ½Ğ½Ñ‹Ğµ â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
seed: ## Ğ—Ğ°Ğ³Ñ€ÑƒĞ·Ğ¸Ñ‚ÑŒ Ñ‚ĞµÑÑ‚Ğ¾Ğ²Ñ‹Ğµ Ğ´Ğ°Ğ½Ğ½Ñ‹Ğµ (100 ĞºĞ¾Ğ¼Ğ¿Ğ°Ğ½Ğ¸Ğ¹)
	docker compose exec data-pipeline python scripts/seed_data.py --count=100

create-admin: ## Ğ¡Ğ¾Ğ·Ğ´Ğ°Ñ‚ÑŒ Ğ¿ĞµÑ€Ğ²Ğ¾Ğ³Ğ¾ Ğ°Ğ´Ğ¼Ğ¸Ğ½Ğ¸ÑÑ‚Ñ€Ğ°Ñ‚Ğ¾Ñ€Ğ°
	docker compose exec api-gateway python scripts/create_admin.py

# â”€â”€â”€ Ğ›Ğ¸Ğ½Ñ‚Ğ¸Ğ½Ğ³ â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
lint: ## ĞŸÑ€Ğ¾Ğ²ĞµÑ€Ğ¸Ñ‚ÑŒ ÑÑ‚Ğ¸Ğ»ÑŒ ĞºĞ¾Ğ´Ğ°
	@for svc in auth-service user-service company-service partner-service; do \
	    docker compose exec $$svc poetry run ruff check src/ tests/; \
	    docker compose exec $$svc poetry run mypy src/; \
	done
	cd frontend && npm run lint

format: ## ĞÑ‚Ñ„Ğ¾Ñ€Ğ¼Ğ°Ñ‚Ğ¸Ñ€Ğ¾Ğ²Ğ°Ñ‚ÑŒ ĞºĞ¾Ğ´
	@for svc in auth-service user-service company-service partner-service; do \
	    docker compose exec $$svc poetry run ruff format src/ tests/; \
	done

# â”€â”€â”€ ĞÑ‡Ğ¸ÑÑ‚ĞºĞ° â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
clean: ## ĞÑÑ‚Ğ°Ğ½Ğ¾Ğ²Ğ¸Ñ‚ÑŒ Ğ¸ ÑƒĞ´Ğ°Ğ»Ğ¸Ñ‚ÑŒ Ğ²ÑĞµ ĞºĞ¾Ğ½Ñ‚ĞµĞ¹Ğ½ĞµÑ€Ñ‹ Ğ¸ Ñ‚Ğ¾Ğ¼Ğ°
	docker compose down -v --remove-orphans
	docker system prune -f

clean-images: ## Ğ£Ğ´Ğ°Ğ»Ğ¸Ñ‚ÑŒ ÑĞ¾Ğ±Ñ€Ğ°Ğ½Ğ½Ñ‹Ğµ Ğ¾Ğ±Ñ€Ğ°Ğ·Ñ‹
	docker compose down --rmi local